{"legislative_session": "2025_26", "identifier": "HB 1032", "title": "Early Enrollment Act; enact", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "description", "abstract": "A BILL to be entitled an Act to amend Article 6 of Chapter 2 of Title 20 of the Official Code of Georgia Annotated, the \"Quality Basic Education Act,\" so as to provide for early enrollment for students who have completed pre-kindergarten or kindergarten at a private school but who do not meet the age requirements for enrollment in kindergarten or first grade; to require the State Board of Education to establish guidelines for early enrollment and to develop a model early enrollment policy; to require local boards of education to adopt an early enrollment policy; to provide for a short title; to provide for an effective date and applicability; to provide for related matters; to repeal conflicting laws; and for other purposes."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "House Hopper", "date": "2026-01-27", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["introduction"], "related_entities": []}, {"description": "House First Readers", "date": "2026-01-28", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "House Second Readers", "date": "2026-01-29", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-2"], "related_entities": []}], "sponsorships": [{"name": "Sandra Scott", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Sandra Scott\"}", "organization_id": null}, {"name": "Kim Schofield", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Kim Schofield\"}", "organization_id": null}, {"name": "Viola Davis", "classification": "primary", "entity_type": "person"