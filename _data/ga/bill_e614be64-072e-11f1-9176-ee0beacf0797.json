{"legislative_session": "2025_26", "identifier": "HB 1065", "title": "West Point, City of; ad valorem tax for municipal purposes; provide homestead exemption", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "description", "abstract": "A BILL to be entitled an Act to provide a homestead exemption from City of West Point ad valorem taxes for municipal purposes in the amount of $100,000.00 of the assessed value of the homestead for residents of that city who are 65 years of age or older and whose income does not exceed $50,000.00; to provide for definitions; to specify the terms and conditions of the exemption and the procedures relating thereto; to provide for applicability; to provide for compliance with constitutional requirements; to provide for a referendum, effective dates, automatic repeal, mandatory execution of election, and judicial remedies regarding failure to comply; to provide for related matters; to repeal conflicting laws; and for other purposes."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "House Hopper", "date": "2026-01-28", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["introduction"], "related_entities": []}, {"description": "House First Readers", "date": "2026-01-29", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "House Second Readers", "date": "2026-02-02", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-2"], "related_entities": []}], "sponsorships": [{"name": "Vance Smith", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Vance Smith\"}", "organization_id": null}, {"name": "Carmen Rice", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Carmen Rice\"}", "organization_id": null}, {"name": "Debbie Buc